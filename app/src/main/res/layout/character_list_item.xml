<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/movieCard"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_character_height"
    android:layout_margin="@dimen/item_character_card_margin"
    android:padding="@dimen/item_character_card_height"
    card_view:cardBackgroundColor="@color/colorPrimary"
    card_view:cardCornerRadius="@dimen/item_character_card_corner_radius"
    card_view:cardElevation="@dimen/item_character_card_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/characterImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_character_card_image_height"
            android:scaleType="fitCenter"
            android:background="@color/baseBackground"/>
        <TextView
            android:id="@+id/characterName"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:lines="@integer/max_lines_2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_character_card_name_height"
            android:textAlignment="center"
            android:gravity="center_vertical"/>
    </LinearLayout>

</android.support.v7.widget.CardView>